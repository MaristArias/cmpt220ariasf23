import java.util.Scanner;

public class PersonsAge {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter your age: ");

        // Age defined as an integer
        int age = input.nextInt();

        // Age that is not allowed to do anything
        if (age < 16) {
            System.out.println("You can not do anything.");

        // Age that is allowed to drive and stay out
        } else if (16 >= age && age < 18) {
            System.out.println("You can drive and stay out past 10 p.m.");

        // Age that is allowed to do all
        } else {
            System.out.println("You can vote, drive, and stay out past 10 p.m.");
        }
    }
}


import java.util.Scanner;

public class NumberPractice {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Enter four numbers ");

        // Allows the 4 numbers to be intergers
        int number1 = input.nextInt();
        int number2 = input.nextInt();
        int number3 = input.nextInt();
        int number4 = input.nextInt();

        // Setting parameters
        int smallest1;
        int smallest2;
        int largest1;
        int largest2;

        // First number less than second number
        if (number1 < number2){
            smallest1 = number1;
            largest1 = number2;

        // Second number less than first number
        } else {
            smallest1 = number2;
            largest1 = number1;

        // Third number less than fourth number)
        } if (number3 < number4) {
            smallest2 = number3;
            largest2 = number4;

        } else {
            smallest2 = number4;
            largest2 = number3;
        }

        // Defining the smallest value as an integer
        int small;

        // Comparison between the smallest values
        if (smallest1 > smallest2) {
            smallest1 = smallest2;
        } else {
            small = smallest1;
        }

        // Defining the largest value as an integer
        int largest;

        // Comparison between the largest values
        if (largest1 < largest2) {
            largest = largest2;
        } else {
            largest = largest1;
        }

        // Printing largest and smallest output
        System.out.println("Largest: " + largest);
        System.out.println("Smallest: " + small);
    }
}



